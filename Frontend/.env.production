# Production Environment Configuration

# API Configuration
VITE_API_URL=https://api.clinic-system.com
VITE_API_TIMEOUT=15000

# Application Configuration
VITE_APP_NAME=Clinic Front Desk System
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Healthcare clinic management system

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Authentication
VITE_SESSION_TIMEOUT=3600000
VITE_REFRESH_TOKEN_THRESHOLD=300000

# UI Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_DEFAULT_THEME=light
VITE_ITEMS_PER_PAGE=10

# Development (disabled in production)
VITE_ENABLE_MOCK_API=false
VITE_LOG_LEVEL=error